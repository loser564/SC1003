
no_of_try = 0
r_int = 0
g_int = 0
b_int = 0

def get_color(color):
    keep_looping = True
    no_of_try == 1
    while keep_looping:
        color = int(input(("Enter the value of the " + color + \
                    " color for message (0 to 255):"))
)

while no_of_try == 1:
    r_int = get_color()
    g_int = get_color()
    b_int = get_color()
msg_color = (r_int, g_int, b_int)
print(msg_color)